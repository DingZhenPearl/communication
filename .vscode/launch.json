{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "启动Node服务器",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server/index.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "env": {
                "PORT": "3000",
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Python: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd": "${workspaceFolder}"
        }
    ]
}